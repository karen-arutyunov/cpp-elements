body
{
  font-family: Verdana, Tahoma, Geneva, Helvetica, Arial, Sans-serif;
  background: rgb(233, 233, 240);
  padding: 0;
  border: 0;
  margin: 0;
  text-align: center; /* hack for IE */
}

a
{
  text-decoration: none;
}

a:hover
{
  text-decoration: underline;
}

a:active
{
  text-decoration: underline;
  color: red;
}

a:focus
{
  text-decoration: underline;
  color: red;
}

#f
{
  margin: 0;
  padding: 0;
}

#topbar
{
  background: rgb(224, 224, 255);
  width: 100%;
  height: 2em;
  border-bottom: 1px solid rgb(0,0,80);
  padding: 0;
  margin: 0;
}

#topbar table
{
  font-size: 80%;
  width: 100%;
}

#page_name
{
  text-align: left;
  padding: 0.25em 0 0.2em 1em;
}

#left_menu
{
  text-align: left;
  width: 50%;  
  padding: 0.3em 0 0.5em 1em;
}

#right_menu
{
  text-align: right;
  width: 50%;
  padding: 0.3em 1em 0.5em 0;
}

#main_area
{
  font: 90%/125% Georgia, Palatino, Times, Times New Roman, serif;
  text-align: justify;
  color: rgb(60, 60, 60);
  padding: 1em 5em;
  margin: 0 auto;
  width: 50em;
}

.op_group_heading
{
  font-size: 120%;
  padding: 1em 0 0.4em;
}

.op_group_intro
{
  padding: 0 0 0.7em;
}

.op_desc
{
  padding: 0 0 0.3em;
}

.op_def
{
  font-weight: bold;
}

.op_form
{
  font-style: italic;
}

.inline_example
{
  font-style: italic;
}

.sample_header
{
  padding: 0 0 0.3em 1em;
}

.samples
{
  font-family: Verdana, Arial, sans-serif;
  font-size: 90%;
  padding: 0 0 0.3em 1em;
}

.op_precedence
{
  padding: 0 0 0.7em;
}

#copyright
{
  font-size: 60%;
  text-align: center;
  height: 2em;
  padding: 0 0 2em 0;
}

